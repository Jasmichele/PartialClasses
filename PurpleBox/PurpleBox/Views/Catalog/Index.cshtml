@model IEnumerable <PurpleBox.Models.CatalogModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.movie.MovieName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.customer.CustomerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.record.RentalDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.record.DueDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.record.ReturnDate)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.movie.MovieName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.customer.CustomerName)
            </td>
            <td>
                @item.record.RentalDate.ToShortDateString()
            </td>
            <td>
                @item.record.RentalDate.ToShortDateString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.record.ReturnDate)
            </td>
        </tr>
    }

</table>
